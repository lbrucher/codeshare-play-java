# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*      /                module:secure

# Home page
GET     /													Application.index


# Interviewer
GET		/interviewer										Interviewer.index
GET		/interviewer/{<[0-9]+>code}							Interviewer.resumeSession

GET		/interviewer/list									Interviewer.listSessions
POST	/interviewer										Interviewer.createSession
GET		/interviewer/{<[0-9]+>code}/init					Interviewer.initSession
GET		/interviewer/{<[0-9]+>code}/refreshOtherText		Interviewer.sessionRefreshOtherText
POST	/interviewer/{<[0-9]+>code}/updateMyText			Interviewer.sessionUpdateMyText
POST	/interviewer/{<[0-9]+>code}/updateMyComments		Interviewer.sessionUpdateMyComments






# TEST
#GET		/interviewer/test9.json					Interviewer.test3


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
*       /{controller}                  			{controller}.index


